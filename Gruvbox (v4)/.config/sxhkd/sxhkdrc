#reload sxhkd
super + Escape
	 killall sxhkd && sxhkd &

super + grave
	sh ~/lib/scripts/binds

#Main Binds
super + Return
	$TERMINAL

super + s 
	$TERMINAL -e ranger

super + w
	brave

super + shift + w
	tabbed -r 2 surf -pe x 'file:///home/wilson/.config/surf/html/homepage.html'

super + shift + s
	pcmanfm

super + p
	scrot

super +  d
	dmenu_run -c -p "Run:" -bw 2 -l 30

super + g
	screenkey

super + shift + g
	killall screenkey

#Script Binds
alt + b
	sh $HOME/.config/polybar/launch.sh		

alt + m
	st -e yay

alt + e 
	sh ~/lib/scripts/emoji

alt + z
	sh ~/lib/scripts/repos

alt + p
	sh ~/lib/scripts/papers

alt + w
	sh ~/lib/scripts/write-disk

alt + d
	sh ~/lib/scripts/mount-disk

alt + s 
	sh ~/lib/scripts/video

alt + q
	sh ~/lib/scripts/roms

alt + l
	sh ~/lib/scripts/wiki

#System Binds
super + y 
	slock

super + F2
	kill -9 -1

super + F3
	reboot

super + F4
	shutdown now

super + F1
	sudo systemctl suspend

#Brightness Binds
XF86MonBrightnessDown
	xbacklight -dec 10

XF86MonBrightnessUp
	xbacklight -inc 10

#Audio Binds
XF86AudioRaiseVolume
	 pactl set-sink-volume @DEFAULT_SINK@ +10%

XF86AudioLowerVolume
	 pactl set-sink-volume @DEFAULT_SINK@ -10%

XF86AudioMute
	 pactl set-sink-mute @DEFAULT_SINK@ toggle
